<assembly>
    <id>bin</id>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <baseDirectory>/</baseDirectory>
    <includeSiteDirectory>false</includeSiteDirectory>

    <fileSets>
        <fileSet>
            <directory>target/appassembler/lib</directory>
            <outputDirectory>/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/sample-configs</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly-resources/log</directory>
            <outputDirectory>/log</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly-resources/cfg</directory>
            <outputDirectory>/cfg</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly-resources/deploy</directory>
            <outputDirectory>/deploy</outputDirectory>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>target/appassembler/bin/q2</source>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0755</fileMode>
            <filtered>true</filtered>
        </file>
        <file>
            <source>target/appassembler/bin/q2.bat</source>
            <outputDirectory>/bin</outputDirectory>
            <filtered>true</filtered>
            <lineEnding>crlf</lineEnding>
        </file>
    </files>
</assembly>
